# Hustle MVP - Terraform Variables Example
# Copy this file to terraform.tfvars and update with your values
# Command: cp terraform.tfvars.example terraform.tfvars

# GCP Project Configuration
project_id = "hustle-dev-202510"  # Your GCP project ID
region     = "us-central1"        # GCP region
zone       = "us-central1-a"      # GCP zone

# Network Configuration
vpc_name    = "hustle-vpc"
subnet_name = "hustle-public-subnet"
subnet_cidr = "10.10.1.0/24"

# Compute Configuration (Cost-Optimized)
vm_name         = "hustle-web-server"
vm_machine_type = "e2-micro"              # Cheapest option
vm_image        = "debian-cloud/debian-12"
vm_disk_size    = 10                      # GB

# Database Configuration (Cost-Optimized)
db_name       = "hustle-db"
db_tier       = "db-g1-small"             # Smallest tier
db_version    = "POSTGRES_15"
database_name = "hustle_mvp"
db_user       = "hustle_admin"

# Storage Configuration
bucket_name          = "hustle-mvp-media"
bucket_location      = "US"
bucket_storage_class = "STANDARD"

# Environment Tags
environment  = "development"
project_name = "hustle-mvp"
