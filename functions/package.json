    "firebase-functions": "^5.0.0",
    "bcrypt": "^5.1.1",
    "zod": "^3.22.4",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.3.3",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
